{
  "expo": {
    "name": "Check-In",
    "slug": "check-in",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/worker-logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/worker-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.teslicvukasin.checkin",
      "config": {
        "googleMapsApiKey": "AIzaSyABi--IGqYp6oWU_kinw1TyoFu01fBMZXQ"
      },
      "infoPlist": {
        "NSCameraUsageDescription": "The camera is used to scan QR codes when checking in and out of work.",
        "NSLocationWhenInUseUsageDescription": "Location is used to verify whether the worker is physically present at the workplace during check-in.",
        "NSLocationAlwaysUsageDescription": "Background location is used to update attendance status and show active workers on the map in real-time.",
        "UIBackgroundModes": ["location"],
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.teslicvukasin.checkin",
      "adaptiveIcon": {
        "foregroundImage": "./assets/worker-logo.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "INTERNET",
        "CAMERA"
      ],
      "useNextNotificationsApi": true,
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyABi--IGqYp6oWU_kinw1TyoFu01fBMZXQ"
        }
      }
    },
    "web": {
      "favicon": "./assets/worker-logo.png"
    },
    "plugins": [
      "expo-secure-store",
      "expo-location",
      "expo-camera",
      "expo-task-manager",
      "expo-dev-client"
    ],
    "extra": {
      "eas": {
        "projectId": "01d0ea0e-5270-4a25-914c-bb9ffab4a3df"
      }
    },
    "owner": "teslicvukasin"
  }
}
